<div class="container">
  <br>
  <br>
    <div class="row">
      <div class="col-xs-6">
        <img src="http://pluspng.com/img-png/superhero-png-super-hero-words-clip-art-c1f0fc9eadbeb2cf6e5jpg-1600.png"class="img-fluid" alt="Responsive image">

      </div>
      <div class="col-xs-6">
          <h1>Create a new superhero</h1>
          <br>
          <br>
          <%= simple_form_for @super_hero do |f| %>
            <%= @super_hero.errors.full_messages.join(', ') %>
            <%= f.input :name %>
            <%= f.input :address, input_html: {id: "auto_address"} %>
            <label for="price">
              Price
            </label>
            <div class="range-slider">
              <input class="range-slider__range" type="range" value="100" min="0" max="100" name="super_hero[price]">
              <span class="range-slider__value">0</span>
            </div>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.association :powers %>
            <%= f.association :powers %>
            <p> <%= f.button :submit, class: 'btn btn-danger'%><%= link_to "Back to Super Heroes list", root_path, class: 'btn btn-light' %></p>
          <% end %>
        </div>
    </div>
</div>

