<div class="container">
  <br>
  <br>
    <div class="row">
      <div class="col-xs-6">
        <img src="http://pluspng.com/img-png/superhero-png-super-hero-words-clip-art-c1f0fc9eadbeb2cf6e5jpg-1600.png"class="img-fluid" alt="Responsive image">

      </div>
      <div class="col-xs-6">
          <h1>Create a new superhero</h1>
          <br>
          <br>
          <%= simple_form_for @super_hero do |f| %>
            <%= @super_hero.errors.full_messages.join(', ') %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :price, :collection => (1..100).to_a %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.association :powers %>
            <%= f.association :powers %>
            <%= f.button :submit %>
          <% end %>
          <%= link_to "Back to Super Heroes list", root_path, class: 'btn btn-primary' %>
            <br>
            <br>
        </div>
    </div>
</div>
