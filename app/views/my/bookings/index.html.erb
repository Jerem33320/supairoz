<div class="container">
  <div class= "index-title">
  <h1>All your bookings</h1>
  </div>

  <div class="card-group">
    <% @bookings.each do |booking| %>
    <div class="col-md-4 col-sm-6">
      <div class="card" style="">
          <%= cl_image_tag booking.super_hero.photo, crop: :fill, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title" style="text-align: center"><%= booking.super_hero.name %></h5>
          <p class="card-text" style="text-align: center">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <ul class="list-group list-group-flush" style="text-align: center">
            <li class="list-group-item"><%= booking.starts_at %></li>
            <li class="list-group-item"><%= booking.ends_at %></li>
          </ul>
           <a><%= link_to 'Show', my_booking_path(booking.id), class: 'btn btn-light btn-block'%></a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



