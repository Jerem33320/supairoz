
<div class="container text-center">
  <h2>Booking number :<%= @booking.id %></h2>
  <h4><%= @booking.super_hero.name %></h4>
  <p><%= @booking.starts_at %></p>
  <p><%= @booking.ends_at %></p>

  <%= link_to "Update your booking", edit_my_booking_path(@booking), class: 'btn btn-primary' %>

  <h2>Add a review</h2>
  <%= simple_form_for([:my, @booking], method: :patch) do |f| %>
    <%= f.input :review %>
    <%= f.submit "add a review", class: "btn btn-primary"%>
  <% end %>
</div>
